<h1>Imported Stock Items</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <th>Stock Item Id</th>
        <th>Description</th>
        <th>Price</th>
        <th>Cost</th>
        <th>Price Type</th>
        <th>Quantity on Hand</th>
        <th>Modifiers</th>
      </tr>  
    <% @stock_items.each do |stock_item| %>
      <tr>
        <td><%= stock_item.id %></td>
        <td><%= stock_item.description %></td>
        <td><%= stock_item.price %></td>
        <td><%= stock_item.cost %></td>
        <td><%= stock_item.price_type %></td>
        <td><%= stock_item.quantity_on_hand %></td>
        <td><% stock_item.modifiers.each do |modifier| %>
          <td><%= modifier['name'] %></td>
          <td><%= modifier['price'] %></td>
        <% end %>  
        </td>
        <td><%= link_to 'Destroy', stock_item, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= form_tag('/imports', method: 'post', multipart: true) do %>
  <input name="import_type" id="import_type" value="StockItem" type="hidden"/>
  <%= file_field_tag :file %>
  <%= submit_tag 'Upload File' %>
<% end %>
